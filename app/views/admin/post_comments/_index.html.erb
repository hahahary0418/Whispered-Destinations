<div class="container mt-4">
  <% @post.post_comments.each do |post_comment| %>
    <div class="row mb-3">
      <!-- コメントユーザー情報 -->
      <div class="col-md-12">
        <div class="d-flex align-items-center">
          <%= link_to end_user_path(post_comment.user) do %>
            <%= image_tag post_comment.user.get_profile_image(50, 50), class: "rounded-circle mr-3" %>
            <strong><%= post_comment.user.name %></strong>
          <% end %>
          <span class="text-muted ml-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
        </div>
      </div>

      <!-- コメント内容 -->
      <div class="col-md-12 mt-2">
        <p><%= post_comment.comment %></p>
      </div>

      <!-- コメント削除ボタン -->
      <div class="col-md-12 mt-2">
        <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
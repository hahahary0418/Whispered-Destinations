<div class="container mt-5 pt-5 mb-5">
  <h2>いいねした投稿</h2>
  <div class="row mt-4">
    <% @favorite_posts.each do |post| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <% if post.images.attached? %>
            <%= link_to post_path(post) do %>
              <%= image_tag post.images.first, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
            <p class="card-text"><%= truncate(post.body, length: 100) %></p>
            <div class="d-flex justify-content-between">
              <div>♡ <%= post.favorites.count %></div>
              <div><i class="fa-regular fa-comment-dots"></i> <%= post.post_comments.count %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
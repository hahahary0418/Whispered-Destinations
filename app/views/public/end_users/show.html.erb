<%= image_tag @user.get_profile_image(100,100) %>
<%= @user.name %>
<%= @user.introduction %>

<% @posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <% if post.image.attached? %>
      <%= image_tag post.image, size: "200x200" %>
    <% end %>
    <%= post.title %>
  <% end %>
<% end %>
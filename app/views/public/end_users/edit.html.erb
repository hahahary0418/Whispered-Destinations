<%= form_with model: @user, url: end_user_path(@user), method: :patch do |f| %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  
  <%= f.label :introduction, "自己紹介" %>
  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  
  <%= f.label :profile_image, "プロフィール画像" %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  
  <%= f.submit "変更内容を保存" %>
  
<% end %>

<%= link_to "退会する", end_users_check_path %>
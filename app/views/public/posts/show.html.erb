<%= link_to end_user_path(@post.user) do %>
  <%= image_tag @post.user.profile_image, size: "50x50" %>
  <%= @post.user.name %>
<% end %>

<h2>タイトル</h2>
<p><%= @post.title %></p>

<h2>本文</h2>
<p><%= @post.body %></p>

<% if @post.image.attached? %>
  <%= image_tag @post.image, size: "300x300" %>
<% end %>

<% if @post.user_id == current_user.id %>
  <%= link_to "編集", edit_post_path(@post) %>
  <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
<% end %>

<div id="favorite_btn_<%= @post.id %>">
  <%= render "public/favorites/btn", post: @post %>
</div>

<div id="comment_counter">
 <%= render "public/post_comments/counter", post: @post %>
</div>

<div id="comment_index">
 <%= render "public/post_comments/index", post: @post %>
</div>

<div id="comment_form">
<%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
</div>